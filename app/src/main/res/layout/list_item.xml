<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_list"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/poster_a_star"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="A Star Is Born"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/image_list"
                app:layout_constraintTop_toTopOf="@+id/image_list" />

            <TextView
                android:id="@+id/txt_featured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/featured_crew"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/txt_name"
                app:layout_constraintTop_toBottomOf="@id/txt_name" />

            <TextView
                android:id="@+id/txt_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/director"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/txt_featured"
                app:layout_constraintTop_toBottomOf="@id/txt_featured" />

            <TextView
                android:id="@+id/txt_screenplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/screenplay"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/txt_director"
                app:layout_constraintTop_toBottomOf="@id/txt_director" />

            <TextView
                android:id="@+id/txt_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/story"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/txt_screenplay"
                app:layout_constraintTop_toBottomOf="@id/txt_screenplay" />

            <TextView
                android:id="@+id/txt_name_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Bradley Cooper"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/txt_director"
                app:layout_constraintTop_toTopOf="@id/txt_director"
                app:layout_constraintBottom_toBottomOf="@id/txt_director"/>

            <TextView
                android:id="@+id/txt_name_screenplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Will Fetters"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/txt_screenplay"
                app:layout_constraintTop_toTopOf="@id/txt_screenplay"
                app:layout_constraintBottom_toBottomOf="@id/txt_screenplay"/>

            <TextView
                android:id="@+id/txt_name_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robert Carson"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/txt_story"
                app:layout_constraintTop_toTopOf="@id/txt_story"
                app:layout_constraintBottom_toBottomOf="@id/txt_story"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>